<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--No Action Bar With Transparent Status Bar-->
    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:colorBackground">@color/appBackground</item>
    </style>

    <!--Splash Screen Theme-->
    <style name="AppTheme.NoActionBar.SplashTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="ThemeOverlay.AppCompat.navTheme">

        <!-- Color of text and icon when SELECTED -->
        <item name="colorPrimary">@color/colorAccent</item>

    </style>


    <style name="TextViewTitle" parent="TextAppearance.AppCompat.Headline">

        <item name="android:textColor">@color/textColorWhite2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textSize24</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>

    </style>

    <style name="TextViewSubTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">

        <item name="android:textColor">@color/textColorWhite1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textSize22</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="CardTextView" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/textColorWhite1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textSize18</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="CardTextViewSmall" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/textColorWhite2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textSize14</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <style name="TextViewSmall" parent="TextAppearance.AppCompat.Headline">

        <item name="android:textSize">@dimen/textSize18</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">@color/textColorWhite1</item>

    </style>

    <style name="NavigationDrawerText" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">

        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">@color/textColorWhite1</item>
        <item name="android:textSize">@dimen/textSize14</item>
    </style>




    </resources>
